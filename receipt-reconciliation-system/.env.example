# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/receipt_reconciliation
MONGO_DATABASE=receipt_reconciliation

# Custom Model Paths
CUSTOM_LLM_MODEL_PATH=./models/llm.py
CUSTOM_EMBEDDING_MODEL_PATH=./models/embedding.py

# Application Settings
MAX_FILE_SIZE_MB=25
MAX_EMAILS_PER_BATCH=10
MAX_CONCURRENT_PROCESSING=3
PROCESSING_TIMEOUT_MINUTES=30

# LLM Model Settings
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.1

# Email Provider Settings
EMAIL_RATE_LIMIT_PER_HOUR=100
EMAIL_RETRY_ATTEMPTS=3
EMAIL_CONNECTION_TIMEOUT=30

# Security Settings
ENABLE_FILE_VALIDATION=true
ENABLE_AUDIT_LOGGING=true
SECRET_KEY=your-secret-key-here-change-in-production

# Development Settings
DEBUG=false
LOG_LEVEL=INFO
